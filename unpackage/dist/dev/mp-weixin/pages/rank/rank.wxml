<view class="rank-container"><view class="tab"><block wx:for="{{rankData}}" wx:for-item="tabItem" wx:for-index="tabIndex" wx:key="*this"><view class="{{['tab-item '+(currentIndex==tabIndex?'active':'')]}}" data-index="{{tabIndex}}" data-event-opts="{{[['tap',[['showRank',['$event']]]]]}}" bindtap="__e"><text>{{tabIndex==0?'全部':tabItem.standard}}</text><block wx:if="{{currentIndex==tabIndex}}"><view class="tabLine"></view></block></view></block></view><scroll-view class="tab-content" scroll-y="true" scroll-top="{{scrollTop.scrollTop_value}}" data-event-opts="{{[['scroll',[['scrollFun',['$event']]]]]}}" bindscroll="__e"><block wx:for="{{rankData}}" wx:for-item="contentItem" wx:for-index="contentIndex" wx:key="engName"><view class="content-item" data-type="{{contentItem.engName}}" hidden="{{currentIndex!=contentIndex}}"><block wx:for="{{contentItem.qdRank||contentItem.zhRank}}" wx:for-item="bookItem" wx:for-index="bookIndex" wx:key="*this"><view class="book-item" data-bookId="{{bookItem.id}}" data-event-opts="{{[['tap',[['gotoBookDetail',['$event']]]]]}}" bindtap="__e"><view class="bookInfo"><text class="bookName">{{bookItem.factionName+"\n"}}</text><text class="author">{{bookItem.author+"\n"}}</text><text class="bookDes">{{bookItem.des}}</text><icon class="first-icon" hidden="{{bookIndex==0}}"></icon></view><image src="{{bookItem.headerImage}}" mode="scaleToFill"></image></view></block></view></block></scroll-view><view class="backTop" hidden="{{!scrollTop.backTop_show}}" data-event-opts="{{[['tap',[['backToTop',['$event']]]]]}}" bindtap="__e"><icon class="backTop-icon"></icon></view></view>