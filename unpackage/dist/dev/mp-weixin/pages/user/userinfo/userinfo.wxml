<view class="userInfo-container"><view class="err-tips" hidden="{{!errTips}}">{{errTips}}</view><form bindsubmit="formSubmit"><image class="headImg" src="{{avatar}}" data-event-opts="{{[['error',[['headimgError',['$event']]]],['tap',[['uploadAvatar',['$event']]]]]}}" binderror="__e" bindtap="__e"></image><view class="split-text">基本信息</view><view class="section"><view class="section-title">昵称</view><block wx:if="{{changeOrSubmit}}"><view class="display" style="{{('color:'+nickname?'#000':'#666')}}">{{nickname||'给自己起个响亮的名字吧'}}</view></block><block wx:if="{{!changeOrSubmit}}"><input name="input" placeholder="请输入昵称" data-type="nickname" data-event-opts="{{[['input',[['__set_model',['','nickname','$event',[]]],['userInput',['$event']]]]]}}" value="{{nickname}}" bindinput="__e"/></block></view><view class="section"><view class="section-title">邮箱</view><block wx:if="{{changeOrSubmit}}"><view class="display" style="{{('color: '+email?'#000':'#666')}}">{{email||'未设置邮箱'}}</view></block><block wx:if="{{!changeOrSubmit}}"><input name="input" placeholder="请输入常用邮箱" data-type="email" data-event-opts="{{[['input',[['__set_model',['','email','$event',[]]],['userInput',['$event']]]]]}}" value="{{email}}" bindinput="__e"/></block></view><view class="split-text">可选信息</view><view class="section"><view class="section-title">姓名</view><block wx:if="{{changeOrSubmit}}"><view class="display" style="{{('color:'+realm?'#000':'#666')}}">{{realm||'未设置姓名'}}</view></block><block wx:if="{{!changeOrSubmit}}"><input name="input" placeholder="请输入自己的姓名" data-type="realm" data-event-opts="{{[['input',[['__set_model',['','realm','$event',[]]],['userInput',['$event']]]]]}}" value="{{realm}}" bindinput="__e"/></block></view><view class="section"><view class="section-title">年龄</view><block wx:if="{{changeOrSubmit}}"><view class="display" style="{{('color: '+(age>0)?'#000':'#666')}}">{{age>0?age:'未设置年龄'}}</view></block><block wx:if="{{!changeOrSubmit}}"><input name="input" placeholder="请输入年龄" data-type="age" data-event-opts="{{[['input',[['__set_model',['','age','$event',[]]],['userInput',['$event']]]]]}}" value="{{age}}" bindinput="__e"/></block></view><view class="section"><view class="section-title">生日</view><block wx:if="{{changeOrSubmit}}"><view class="display" style="{{('color: '+birthday?'#000':'#666')}}">{{birthday||'未设置出生日期'}}</view></block><block wx:if="{{!changeOrSubmit}}"><picker mode="date" value="{{birthday}}" start="1990-09-01" end="2017-09-01" data-type="birthday" data-event-opts="{{[['change',[['userInput',['$event']]]],['input',[['__set_model',['','birthday','$event',[]]]]]]}}" bindchange="__e" bindinput="__e"><view class="picker" style="{{('color:'+birthday?'#000;':'#888;')}}">{{birthday||'请输入出生日期'}}</view></picker></block></view><view class="section"><view class="section-title">所在地</view><block wx:if="{{changeOrSubmit}}"><view class="display" style="{{('color:'+address?'#000':'#666')}}">{{address||'未设置所在地'}}</view></block><block wx:if="{{!changeOrSubmit}}"><input name="input" placeholder="请输入当前所在位置" data-type="address" data-event-opts="{{[['input',[['__set_model',['','address','$event',[]]],['userInput',['$event']]]]]}}" value="{{address}}" bindinput="__e"/></block></view><view class="section"><view class="section-title">个人签名</view><block wx:if="{{changeOrSubmit}}"><view class="display" style="{{('color: '+signature?'#000':'#666')}}">{{signature||'未设置签名'}}</view></block><block wx:if="{{!changeOrSubmit}}"><input name="input" placeholder="请输入个人签名" data-type="signature" data-event-opts="{{[['input',[['__set_model',['','signature','$event',[]]],['userInput',['$event']]]]]}}" value="{{signature}}" bindinput="__e"/></block></view><view class="btn-area"><button formType="submit" type="primary">{{changeOrSubmit?'修改':'提交'}}</button></view></form></view>